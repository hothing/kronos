project Kronos_VM is

   for Source_Dirs use ("src", "src/int");
   for Object_Dir use "obj";
   for Main use ("Kronos3vm.cpp");
   for Languages use ("C++");

   package Naming is
      for Spec_Suffix ("c++") use ".h";
   end Naming;

   package Compiler is
      for Switches ("c++") use ("-Wall", "-std=c++11", "-g");
   end Compiler;

end Kronos_VM;

